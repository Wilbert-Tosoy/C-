#include <stdio.h>
#include <math.h>

void printSquareValue() {
    int x;
    printf("Enter how many number/s: ");
    scanf("%d", &x);
    for (int i = 1; i <= x; i++) {
        if (i % 2 == 0) {
            float square = pow(i, 2);
            printf("%d^2 = %.0f\n", i, ceil(square));
        } else {
            continue;
        }
    }
}

int main(void) {
    printSquareValue();
    return 0;
}
