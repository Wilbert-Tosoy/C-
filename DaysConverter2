#include <stdio.h>

void daysConverter() {
    int totalDays;

    printf("Enter the total days: ");
    scanf("%d", &totalDays);

    int year = totalDays / 365;
    int month = (totalDays - (year * 365)) / 30;
    int days = totalDays - ((year * 365) + (month * 30));

    printf("Year/s: Month/s: Day/s - %d: %d: %d", year, month, days);

}

int main(void) {
    daysConverter();

    return 0;
}
