#include <stdio.h>

void information() {
    int day, year;
    double mobileNumber;
    char month[10];
    char firstname[20];
    char lastname[20];

    printf("Enter your firstname: ");
    scanf("%s", firstname);

    printf("Enter your surname: ");
    scanf("%s", lastname);

    printf("Enter the month, day, and year of your birthday: ");
    scanf("%s%d%d", month, &day, &year);

    printf("Enter you mobile phone number: ");
    scanf("%lf", &mobileNumber);

    printf("%s %s\n", firstname, lastname);
    printf("%s %d, %d\n", month, day, year);
    printf("0%.0lf", mobileNumber);

}


int main (void) {
    information();

    return 0;
}
